Name: cockpit-wicked
Version: %{VERSION}
Release: 0
Summary: Cockpit user interface for Wicked
License: LGPL-2.1-or-later
URL: https://github.com/openSUSE/cockpit-wicked
Source: https://github.com/openSUSE/cockpit-wicked/releases/download/%{version}/cockpit-wicked-%{version}.tar.gz
BuildArch: noarch
BuildRequires:  appstream-glib

Requires: cockpit-system
Requires: wicked

BuildRequires: nodejs-devel
BuildRequires: npm

%define debug_package %{nil}

%description
Cockpit module for managing network configuration through Wicked.

%prep
%setup -n cockpit-wicked

%install
%make_install
appstream-util validate-relax --nonet %{buildroot}/%{_datadir}/metainfo/*

# drop source maps, they are large and just for debugging
find %{buildroot}%{_datadir}/cockpit/ -name '*.map' | xargs rm --verbose

%files
%{_datadir}/cockpit
%{_datadir}/metainfo/*

%changelog
